amends "package://github.com/jdx/hk/releases/download/v1.1.0/hk@1.1.0#/Config.pkl"

env {
  ["HK_LOG"] = "error"
  ["HK_HIDE_WHEN_DONE"] = "true"
}

local linters  = new Mapping<String, Step> {
  ["fmt"]  {
    fix = "dprint fmt"
    stage = "*"
  }
}

hooks {
  ["pre-commit"] {
    fix = true
    stash = "git"
    steps {
      ...linters
    }
  }
}
